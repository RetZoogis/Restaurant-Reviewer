<h1>Login</h1>
@if (!string.IsNullOrEmpty(error))
{
    <h2 class="text-danger"  style="padding: 10px; font-size: 15px; margin-top:1rem;">@error</h2>
}
<div class="row">
    <div class="col-md-4">
       

        <form action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post">
            <div class="form-group">
                <label for="username" class="control-label"></label>
                <input name="username" class="form-control" placeholder="Username" />
                @*<span asp-validation-for="Name" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label for="password" class="control-label"></label>
                <input name="password" type="password" class="form-control" placeholder="Password" />
                @*<span asp-validation-for="Address" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit"  style="margin-top:1rem" value="login" class="btn btn-primary" />
            </div>

        </form>
    </div>
